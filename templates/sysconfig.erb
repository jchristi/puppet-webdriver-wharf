# Environment variables for webdriver-wharf

# The docker image to use
## default: cfmeqe/sel_ff_chrome
WEBDRIVER_WHARF_IMAGE=<%= @docker_image %>

# Number of containers to have on "hot standby" for checkout
## default: 4
WEBDRIVER_WHARF_POOL_SIZE=<%= @pool_size %>

# Max time for an appliance to be checked out before it's
# forcibly checked in, in seconds
## default: 3600
WEBDRIVER_WHARF_MAX_CHECKOUT_TIME=<%= @max_checkout_time %>

# Interval to check for updates to the docker image (in seconds)
## default: 3600 (1 hour)
WEBDRIVER_WHARF_IMAGE_PULL_INTERVAL=<%= @image_pull_interval %>

# Interval to rebalance the active container pool. Frequent rebalancing
# should not be necessary, and indicates a wharf bug.
## default: 21600 (6 hours)
WEBDRIVER_WHARF_REBALANCE_INTERVAL=<%= @rebalance_interval %>

# Log level
## default: info
WEBDRIVER_WHARF_LOG_LEVEL=<%= @log_level %>

# Address to listen on
## default: 0.0.0.0
WEBDRIVER_WHARF_LISTEN_HOST=<%= @listen_host %>

# Port to listen on
## default: 4899
WEBDRIVER_WHARF_LISTEN_PORT=<%= @listen_port %>

# Max amount of time allowed for docker to start selenium
## default: 60
WEBDRIVER_WHARF_START_TIMEOUT=<%= @start_timeout %>

# Database URL that wharf should connect to for container tracking.
#
# By default, wharf creates and maintains its own SQLite database in
# sane locations, though not necessarily the "correct" one according to
# the Filesystem Hierarchy Standard.
#
# If set, this value is passed directly to sqlalchemy with no further
# processing. See the sqlalchemy docs for information regarding the
# construction of URLs. When using other database engines, wharf takes no
# responsibility for installing the correct driver, needs the ability to
# create tables, and most importantly has not been tested with that engine.
<% if @db_url.nil? puts '#' %>WEBDRIVER_WHARF_DB_URL=<%= @db_url %>
